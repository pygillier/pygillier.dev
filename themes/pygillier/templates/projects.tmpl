{#  -*- coding: utf-8 -*- #}
{% extends 'base.tmpl' %}
{% import 'project_helper.tmpl' as project with context %}
{% block content %}
<section class="hero">
  <header class="hero-body">
    <h1 class="title">
      {{ title }}
    </h1>
    <p class="subtitle">
      Recents works, no order.
    </p>
  </header>
  <hr class="separator"/>
</section>
<section class="section">
  <div class="container is-max-desktop">
    {% for p in projects %}
    <article>
      <figure class="image is-3by1">
  <img src="https://bulma.io/images/placeholders/256x256.png">
</figure>
      <header>{{ p.title() }}</header>
    </article>
    {% endfor %}
  </div>
</section>
<h2>All projects</h2>

    <ul class="project-list">
    {% for p in projects %}
        <li class="project project-sort-{{ p.meta('sort') }}"><a href="{{ p.permalink() }}">{{ p.title() }}</a> {{ project.devstatus(p.meta('devstatus')) }}</a></li>
    {% endfor %}
    </ul>
{% endblock %}
